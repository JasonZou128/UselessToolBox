.search-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f5f6fa;
}
.search-picker, .search-input {
  min-width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
  background: #fff;
  padding: 0 20rpx;
}
.search-input {
  width: 220rpx;
}
.table-scroll {
  width: 100%;
  overflow-x: auto;
}
.table {
  min-width: 1200rpx;
}
.table-header {
  display: flex;
  background: #e6f0fa;
  border-radius: 8rpx 8rpx 0 0;
}
.th {
  flex: 1;
  min-width: 160rpx;
  font-weight: bold;
  padding: 18rpx 10rpx;
  color: #007aff;
  border-right: 1rpx solid #e0e0e0;
}
.table-row {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.td {
  flex: 1;
  min-width: 160rpx;
  padding: 16rpx 10rpx;
  font-size: 26rpx;
  word-break: break-all;
  border-right: 1rpx solid #f0f0f0;
}
.td button {
  margin-bottom: 8rpx;
} 