.search-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
  align-items: center;
}
.search-picker {
  min-width: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx 16rpx;
  font-size: 26rpx;
  background: #fff;
}
.table-scroll {
  width: 100%;
  overflow-x: auto;
}
.table {
  min-width: 1200rpx;
}
.table-header {
  display: flex;
  background: #f5f6fa;
  font-weight: bold;
}
.th {
  min-width: 180rpx;
  padding: 12rpx 8rpx;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}
.table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.td {
  min-width: 180rpx;
  padding: 10rpx 8rpx;
  text-align: center;
  word-break: break-all;
} 