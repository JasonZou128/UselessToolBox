.container { min-height: 100vh; background: #f5f6fa; }
.top-bar { display: flex; justify-content: space-between; align-items: center; padding: 30rpx 20rpx 10rpx 20rpx; }
.user-info { font-size: 28rpx; font-weight: bold; }
.logout-btn { background: #ff4d4f; color: #fff; border-radius: 8rpx; padding: 10rpx 30rpx; font-size: 26rpx; }
.main-content { min-height: 600rpx; padding: 20rpx; }
.placeholder { color: #bbb; font-size: 28rpx; text-align: center; margin-top: 100rpx; }

/* 移除原有tabbar样式，添加admin风格tabbar */
.tabbar-fixed {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx #eee;
  display: flex;
  z-index: 99;
}
.tabbar-item {
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #888;
  transition: background 0.2s, color 0.2s;
}
.tabbar-item.active {
  color: #007aff;
  font-weight: bold;
  border-top: 4rpx solid #007aff;
  background: #f5f6fa;
} 