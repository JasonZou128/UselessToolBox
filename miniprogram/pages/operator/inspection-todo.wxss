.inspection-header {
  font-size: 28rpx;
  color: #007aff;
  background: #f5f6fa;
  padding: 24rpx 20rpx 12rpx 20rpx;
  margin-bottom: 10rpx;
}
.loading {
  text-align: center;
  color: #888;
  margin: 40rpx 0;
}
.inspection-list {
  margin-bottom: 40rpx;
}
.inspection-card {
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  font-size: 28rpx;
}
.inspection-card button {
  margin-right: 20rpx;
  min-width: 120rpx;
  height: 60rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}
.inspection-card button[type="primary"] {
  background: #52c41a;
  color: #fff;
}
.inspection-card button:not([type="primary"]) {
  background: #f5f5f5;
  color: #666;
}
.dialog-overlay {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  min-width: 500rpx;
  box-shadow: 0 8rpx 32rpx #0001;
}
.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}
.dialog-btn {
  min-width: 120rpx;
  height: 60rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.dialog-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
}
.input {
  width: 100%;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #f5f6fa;
  margin-top: 20rpx;
}
.error {
  color: #ff4d4f;
  margin-top: 10rpx;
}
