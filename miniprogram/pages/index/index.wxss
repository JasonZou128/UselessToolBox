/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 欢迎卡片 */
.welcome-card {
  background: linear-gradient(135deg, #1aad19, #26c91a);
  border-radius: 24rpx;
  padding: 40rpx;
  color: white;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(26, 173, 25, 0.3);
}

.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.welcome-desc {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.user-info {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 快捷功能 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.action-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  transition: transform 0.2s ease;
}

.action-card:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  display: block;
}

.action-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 统计数据 */
.stats-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #1aad19;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 最近活动 */
.recent-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.activity-desc {
  font-size: 24rpx;
  color: #666;
}

.activity-time {
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  margin-left: 20rpx;
}

/* 权限申请弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.picker {
  padding: 24rpx 32rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 16rpx;
  background: #fafafa;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 16rpx;
  background: #fafafa;
  font-size: 28rpx;
  min-height: 160rpx;
  box-sizing: border-box;
}

.modal-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-cancel {
  background: #f8f9fa;
  color: #666;
}

.btn-confirm {
  background: #1aad19;
  color: white;
} 