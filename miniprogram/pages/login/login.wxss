.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #f5f6fa;
}
.login-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 80rpx 0 40rpx 0;
}
.login-btn {
  width: 80vw;
  margin: 20rpx 0;
  background: #007aff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}
.divider {
  margin: 30rpx 0;
  color: #aaa;
}
.admin-login-box {
  width: 80vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.input {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
} 