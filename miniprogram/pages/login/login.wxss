.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #f5f6fa;
}
.login-title {
  font-size: 60rpx;
  font-weight: bold;
  margin: 80rpx 0 40rpx 0;
}
.login-btn {
  width: 80vw;
  margin: 20rpx 0;
  background: #007aff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}
.divider {
  margin: 30rpx 0;
  color: #aaa;
}
.admin-login-box {
  width: 80vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.input {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
}

/* 线体选择器弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-box {
  width: 80vw;
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.picker-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.modal-buttons button {
  flex: 1;
} 