.repair-header {
  font-size: 28rpx;
  color: #007aff;
  background: #f5f6fa;
  padding: 24rpx 20rpx 12rpx 20rpx;
  margin-bottom: 10rpx;
}
.filter-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}
.filter-btn {
  border: 2rpx solid #007aff;
  border-radius: 16rpx;
  padding: 12rpx 32rpx;
  color: #007aff;
  background: #fff;
  font-size: 28rpx;
  display: inline-block;
}
.sync-btn {
  margin-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background: #409eff;
  color: #fff;
  border-radius: 8rpx;
  border: none;
  display: inline-block;
}
.device-list {
  margin-bottom: 40rpx;
}
.device-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
}
.input {
  width: 100%;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #f5f6fa;
}
.dialog-overlay {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  min-width: 500rpx;
  box-shadow: 0 8rpx 32rpx #0001;
}
.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}
.dialog-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
}
.dialog-btn {
  min-width: 120rpx;
  height: 60rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.dialog-btn.cancel {
  background: #f5f5f5;
  color: #888;
}
.dialog-btn.confirm {
  background: #007aff;
  color: #fff;
} 