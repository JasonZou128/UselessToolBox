.repair-header {
  font-size: 28rpx;
  color: #007aff;
  background: #f5f6fa;
  padding: 24rpx 20rpx 12rpx 20rpx;
  margin-bottom: 10rpx;
}
.device-list {
  margin-top: 10rpx;
}
.device-card {
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  font-size: 28rpx;
}
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.dialog-content {
  background: #fff;
  border-radius: 12rpx;
  width: 80%;
  max-width: 600rpx;
  padding: 40rpx;
}
.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.dialog-body {
  margin-bottom: 30rpx;
}
.dialog-body .input {
  margin-bottom: 20rpx;
  min-height: 80rpx;
}
.dialog-footer {
  display: flex;
  gap: 20rpx;
}
.dialog-btn {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}
.dialog-btn.cancel {
  background: #f5f5f5;
  color: #666;
}
.dialog-btn.confirm {
  background: #007aff;
  color: #fff;
} 