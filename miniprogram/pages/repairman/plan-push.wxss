.container { min-height: 100vh; background: #f5f6fa; padding: 40rpx; }
.title { font-size: 32rpx; font-weight: bold; margin-bottom: 30rpx; text-align: center; }
.placeholder { color: #bbb; font-size: 28rpx; text-align: center; margin-top: 100rpx; } 
.push-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
}
.push-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.push-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}
.input {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #f5f6fa;
}
.push-btn {
  min-width: 100rpx;
  height: 60rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.push-btn-row {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}
.push-btn.add {
  background: #f5f5f5;
  color: #007aff;
  border: 1rpx solid #007aff;
}
.push-btn.save {
  background: #007aff;
  color: #fff;
  border: none;
} 
.dialog-overlay {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  min-width: 500rpx;
  box-shadow: 0 8rpx 32rpx #0001;
}
.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}
.dialog-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
}
.dialog-btn {
  min-width: 120rpx;
  height: 60rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.dialog-btn.cancel {
  background: #f5f5f5;
  color: #888;
}
.dialog-btn.confirm {
  background: #007aff;
  color: #fff;
} 