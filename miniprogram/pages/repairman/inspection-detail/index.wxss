.container {
  padding: 40rpx;
}
.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}
.info {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.plan-add {
  display: flex;
  gap: 20rpx;
  margin: 30rpx 0 20rpx 0;
}
.plan-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}
.input {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #fff;
}
.plan-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 30rpx 0 10rpx 0;
}
.plan-step {
  font-size: 26rpx;
  margin-bottom: 8rpx;
  padding-left: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.scan-box {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.scan-btn {
  width: 100%;
  background: #007aff;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
  padding: 20rpx 0;
}
.scan-result {
  color: #007aff;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
} 